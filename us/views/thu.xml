<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="thu_view_act" model="ir.actions.act_window">
            <field name="name">Thứ</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">us.thu</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="thu_form" model="ir.ui.view">
            <field name="name">Thứ</field>
            <field name="model">us.thu</field>
            <field name="arch" type="xml">
                <form string="Thứ">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="thu_tree" model="ir.ui.view">
            <field name="name">Thứ</field>
            <field name="model">us.thu</field>
            <field name="arch" type="xml">
                <tree string="Thứ">
                    <field name="name"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>